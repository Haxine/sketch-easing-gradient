{
  "env": {
    "browser": true
  },
  "extends": "airbnb-base",
  "plugins": ["html"],
  "rules": {
    "semi": [2, "never"],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "state",
          "acc",
          "e",
          "ctx",
          "req",
          "request",
          "res",
          "response",
          "$scope"
        ]
      }
    ]
  }
}
